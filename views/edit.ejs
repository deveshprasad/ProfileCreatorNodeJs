<div class="ui main text container segment">
    <div class="ui huge header">EDIT <%=profile.title%></div>
    <form class="ui form" action="/profiles/<%=profile._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">FULL NAME :</label>
            <input type="text" name="profile[title]" id="" value="<%=profile.title%>">
        </div>
        <div class="field">
            <label for="">LOCATION :</label>
            <input type="text" name="profile[location]" id="" value="<%=profile.location%>">
        </div>
        <div class="field">
            <label for="">PROFILE IMAGE :</label>
            <input type="text" name="profile[image]" id="" value="<%=profile.image%>" >
        </div>
        <div class="field">
            <label for="">PROFILE DESCRIPTION :</label>
            <textarea  name="profile[body]" id=""><%=profile.body%></textarea>
        </div>
    <div class="field">
        <input class="ui black big basic button" type="submit" value="Submit">
    </div>
    
    
</form>
</div>
