<%- include("./partials/header.ejs") %> 
<div class="ui main text container segment">
    <div class="ui huge header"><%=profile.title%></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded" src="<%=profile.image%>" alt="" srcset="">   
            <div class="content">
                <span><p class="created">CREATED ON : <%=profile.created.toDateString()%></p></span>
            </div>
            <div class="location">
                <span><p class="created">LOCATION : <%=profile.location %> </p></span>
            </div>     
            <div class="description">
                <p><%=profile.body %> </p>
            </div>
            <a class="ui orange basic button" href="/profiles/<%=profile._id%>/edit">Edit</a>
            <form id="delete" action="/profiles/<%=profile._id%>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
            </form>
            <a class="ui black basic button" href="/profiles">Go Back</a>
        </div>
    </div>
   
    
</div>
<%- include("./partials/footer.ejs") %> 
